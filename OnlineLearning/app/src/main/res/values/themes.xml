<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineLearning" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appBaseColor</item>
        <item name="colorPrimaryVariant">@color/appBaseColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="NoStatusBar" parent="Theme.OnlineLearning">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundImage" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.NooActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/appBaseColor</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

<!--    Button styles-->
    <style name="baseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="defaultButton" parent="baseButton">
        <item name="android:background">@drawable/default_round_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="grayButton" parent="baseButton">
        <item name="android:background">@drawable/gray_round_button</item>
        <item name="android:textColor">@color/darkBlueTextColor</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

<!--    Edittext style-->
    <style name="baseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textColor">@color/darkBlueTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/default_round_edittext</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="otpEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/darkBlueTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/default_round_edittext</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">1</item>
    </style>

<!--    TextView styles-->
    <style name="regularTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/darkBlueTextColor</item>
    </style>

    <style name="regularTextViewWhite" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="regularTextViewGreen" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/appBaseColor</item>
    </style>

    <style name="regularTextViewLightGray" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="mediumTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/darkBlueTextColor</item>
    </style>

    <style name="mediumTextViewWhite" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Progress bar-->
    <style name="defaultProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/appBaseColor</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>