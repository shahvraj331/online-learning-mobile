<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerificationActivity">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/baseScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/regularTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/otp_screen_title"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFirstNumber"
                style="@style/otpEditText"
                android:layout_marginTop="@dimen/_75sdp"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toStartOf="@id/etSecondNumber"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSecondNumber"
                style="@style/otpEditText"
                android:layout_marginStart="@dimen/_20sdp"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toStartOf="@id/etThirdNumber"
                app:layout_constraintStart_toEndOf="@+id/etFirstNumber"
                app:layout_constraintTop_toTopOf="@id/etFirstNumber" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etThirdNumber"
                style="@style/otpEditText"
                android:layout_marginStart="@dimen/_20sdp"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toStartOf="@id/etFourthNumber"
                app:layout_constraintStart_toEndOf="@id/etSecondNumber"
                app:layout_constraintTop_toTopOf="@id/etFirstNumber" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFourthNumber"
                style="@style/otpEditText"
                android:layout_marginStart="@dimen/_20sdp"
                android:imeOptions="actionNext"
                app:layout_constraintEnd_toStartOf="@id/etFifthNumber"
                app:layout_constraintStart_toEndOf="@id/etThirdNumber"
                app:layout_constraintTop_toTopOf="@id/etFirstNumber" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFifthNumber"
                style="@style/otpEditText"
                android:layout_marginStart="@dimen/_20sdp"
                android:imeOptions="actionDone"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                app:layout_constraintStart_toEndOf="@id/etFourthNumber"
                app:layout_constraintTop_toTopOf="@id/etFirstNumber" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResendCode"
                style="@style/regularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/didnt_receive_a_code"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="@id/etFifthNumber"
                app:layout_constraintTop_toBottomOf="@id/etFifthNumber" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                style="@style/defaultButton"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_72sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/confirm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvResendCode" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>